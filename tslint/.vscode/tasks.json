// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format

// A task runner that calls a custom npm script that compiles the extension.
{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "silent",
	"args": ["run", "compile"],
	"isWatching": true,
	"problemMatcher": "$tsc-watch"
}